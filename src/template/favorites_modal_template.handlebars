<div style="position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10000;
            overflow-y: scroll;
">
    <div style="
        pointer-events: none;
        position: sticky;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: rgba(0,0,0,0.85);
        backdrop-filter: blur(10px);
        margin-bottom: -100vh;
    "></div>

    <div style="position: sticky;
            z-index: 1;
            top: 0;
            width: 100%;
            max-width: 1000px;
            margin: auto;
            padding-top: 15px;
            padding-bottom: 15px;
            background: #27272794;
            backdrop-filter: blur(10px);
            border-radius: 0 0 15px 15px;
            display: table;
            {{#if IS_MOBILE_VIEW}}padding-left: 10px; padding-right: 10px{{/if}}
    ">
        <h2 style=" font-weight: bold;
                color: #edd492;
                float: left;
                text-shadow: 2px 2px 2px rgba(0, 0, 0, .2);
                background: #b34c4c;
                padding: 5px 20px;
                border-radius: 10px;
                margin-top: {{#if IS_MOBILE_VIEW}}-1px{{else}}-10px{{/if}};">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 30" fill="#edd492" style="
                        vertical-align: middle;
                        transform: scale(2);
                    ">
                <polygon points="12,2 15,10 23,10 17,14 19,22 12,17 5,22 7,14 1,10 9,10"/>
            </svg> Favorite
        </h2>
        <button type="button" class="mainbg radius" style="float: right; border-radius: 1000px; padding: 11px; line-height: 0; background: rgba(255,255,255,0.6)" data-wwid="close">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <line x1="4" y1="4" x2="20" y2="20" stroke="black" stroke-width="2"/>
                <line x1="20" y1="4" x2="4" y2="20" stroke="black" stroke-width="2"/>
            </svg>
        </button>
        <button type="button" class="radius" style="color: black;float: right;line-height: 0;background: rgba(255,255,255,0.6);
                margin-right: {{#if IS_MOBILE_VIEW}}13px{{else}}25px{{/if}};padding: 13px;" data-wwid="clear-favorites">
            <b>È™terge lista</b>
        </button>
    </div>

    <div class="rmd-container-search-results" style="
            border: 2px solid #b34c4c;
            width: 100%;
            max-width: 1000px;
            padding: {{#if IS_MOBILE_VIEW}}10px{{else}}20px{{/if}} !important;
            background: #ececec;
            border-radius: 10px;
            margin: auto;
            margin-bottom: 150px;
            position: relative;
            {{#if IS_MOBILE_VIEW}}margin-top:105px;{{/if}}
    " onclick="event.stopPropagation()">
        {{{content}}}
    </div>
</div>
