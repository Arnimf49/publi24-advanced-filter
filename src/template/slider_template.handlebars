<div style="position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.85);
            z-index: 10000;
            padding: 30px;
            padding-top: 100px;
">
    <div style="position: absolute; left: 50%; top: 30px; transform: translate(-50%, 0)">
        <button type="button" style="background-color: #c59b2f; position: absolute; right: 70px; min-width: 130px;" class="mainbg radius" data-wwid="toggle-hidden">
            {{#if visible}}Ascunde{{else}}AratÄƒ{{/if}}
        </button>
        <button type="button" style="position: absolute; left: 70px; min-width: 130px;" class="mainbg radius" data-wwid="analyze-images">Analiza imagini</button>
        <button type="button" class="mainbg radius" style="border-radius: 1000px; padding: 11px; line-height: 0; background: rgba(255,255,255,0.6)" data-wwid="close">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <line x1="4" y1="4" x2="20" y2="20" stroke="black" stroke-width="2"/>
                <line x1="20" y1="4" x2="4" y2="20" stroke="black" stroke-width="2"/>
            </svg>
        </button>
    </div>
    <section class="splide" style="height: 100%">
        <style>.splide__track {height: 100%} .splide__track {overflow-y: visible !important;}</style>
        <div class="splide__track">
            <ul class="splide__list" style="height: 100%">
                {{#each images}}
                <li class="splide__slide">
                    <img onclick="event.stopPropagation()" style='max-width: 100%;
                                max-height: 100%;
                                display: block;
                                margin: auto;
                                box-shadow: 5px 5px 15px 3px rgba(0,0,0,.3);
                                border-radius: 5px;
                                ' src="{{this}}"/>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
</div>
